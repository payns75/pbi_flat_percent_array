            "kind": "Measure"
        },
        {
            "displayName": "Point Value",
            "name": "point_value",
            "kind": "Measure"
        },
        {
            "displayName": "Point Total",
            "name": "point_total",
            "kind": "Measure"
        },
        {
            "displayName": "Cat√©gory",
            "name": "category",
            "kind": "Grouping",
            "requiredTypes": [
                {
                    "text": true
                }
            ]
        }
    ],
    "dataViewMappings": [
        {
            "conditions": [
                {
                    "value_text": {
                        "min": 1,
                        "max": 1
                    },
                    "value_arc": {
                        "max": 1
                    },
                    "vor_flag": {
                        "max": 1
                    },
                    "point_value": {
                        "max": 1
                    },
                    "point_total": {
                        "max": 1
                    },
                    "category": {
                        "max": 2
                    }
                }
            ],
            "categorical": {
                "values": {
                    "select": [
                        {
                            "bind": {
                                "to": "value_text"
                            }
                        },
                        {
                            "bind": {
                                "to": "value_arc"
                            }
                        },
                        {
                            "bind": {
                                "to": "vor_flag"
                            }
                        },
                        {
                            "bind": {
                                "to": "point_value"
                            }
                        },
                        {
                            "bind": {
                                "to": "point_total"
                            }
                        }
                    ]
                },
                "categories": {
                    "for": { "in": "category" }
                }
            }
        }
    ],
    "objects": {
        "dataPoint": {
            "displayName": "Data colors",
            "properties": {
                "defaultColor": {
                    "displayName": "Default color",
                    "type": {
                        "fill": {
                            "solid": {
                                "color": true
                            }
                        }
                    }
                },
                "showAllDataPoints": {
                    "displayName": "Show all",
                    "type": {
                        "bool": true
                    }
                },
                "fill": {
                    "displayName": "Fill",
                    "type": {
                        "fill": {
                            "solid": {
                                "color": true
                            }
                        }
                    }
                },
                "fillRule": {
                    "displayName": "Color saturation",
                    "type": {
                        "fill": {}
                    }
                },
                 "fontSize": {
                    "displayName": "Text Size",
                    "type": {
                        "formatting": {
                            "fontSize": true
                        }
                    }
                }
            }
        }
    },
    "suppressDefaultTitle": true
}
