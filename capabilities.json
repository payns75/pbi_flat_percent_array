{
    "dataRoles": [
        {
            "displayName": "Value Text",
            "name": "value_text",
            "kind": "Measure"
        },
        {
            "displayName": "Value Arc",
            "name": "value_arc",
            "kind": "Measure"
        },
        {
            "displayName": "VOR Flag",
